{% extends 'base.html.twig' %}
{% import 'macro/breadcrumb.html.twig' as breadcrumb %}
{% import 'macro/action.html.twig' as action %}

{% set _title = 'Configuraci√≥n' %}
{% set _main_title = 'Mostrar' %}
{% set _section =  'socio_index'%}

{% block _breadcrumb %}
    {{ breadcrumb.show2(_title, _section, 'Mostrar') }}
{% endblock %}

{% block _main %}
    {{ action.tbl_start() }}
    {{ action.tbl_tr('Nombre ',socio.nombre) }}
    {{ action.tbl_tr('DNI/RUC ',socio.apellidos) }}
    {{ action.tbl_tr('Lugar',socio.email) }}
    <tr>
        <th>Proyecciones</th>
        <td>
            {% for proyecciones in socio.proyecciones %}
                {{ proyecciones }},
            {% endfor %}
        </td>
    </tr>
    {% include 'crud/_show_info.html.twig' with {'entity': socio} %}
    {{ action.tbl_end() }}
{% endblock %}

{% block _main_footer %}
    {% include 'crud/_show_links.html.twig' with {'route_base':'socio','entity': socio} %}
{% endblock %}

{% block _main_tools %}
    {% include 'crud/_tools_ico.html.twig' %}
{% endblock %}

{% block _body_tools %}
    {% include 'crud/_show_links_ico.html.twig' with {'route_base':'socio','entity': socio} %}
{% endblock %}

{% block _body_tools_ico %}
    {% include 'crud/_show_links_tool.html.twig' with {'route_base':'socio','entity': socio} %}
{% endblock %}