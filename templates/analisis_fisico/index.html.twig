{% extends 'base.html.twig' %}
{% import 'macro/breadcrumb.html.twig' as breadcrumb %}
{% import 'macro/action.html.twig' as action %}
{% import 'macro/pagination.html.twig' as pagination %}

{% set _title = 'Analisis Fisico' %}
{% set _main_title = 'Listado' %}
{% set _section =  'analisis_fisico_index' %}

{% block _breadcrumb %}
    {{ breadcrumb.show(_title) }}
{% endblock %}

{% block _main %}
    <div class="table-responsive">
        {{ action.tbl_start() }}
        {{ action.thead_start() }}
        <tr>
            {{ action.th('Periodo',  true,'text-center')}}
            {{ action.th('Fecha', true,'text-center')}}
            {{ action.th('Ticket',  true,'text-center') }}
            {{ action.th('Exportable',  true,'text-center') }}
            {{ action.th('Humedad',  true,'text-center')}}
            {{ action.th('Activo', true, 'text-center') }}
            <th></th>
        </tr>
        {{ action.thead_end() }}
        {{ action.tbody_start() }}
        {% for analisis_fisico in paginator.results %}
            <tr>
                <td>{{ analisis_fisico.periodo }}</td>
                <td>{{ analisis_fisico.fecha }}</td>
                <td>{{ analisis_fisico.ticket }}</td>
                <td>{{ analisis_fisico.exportablePorcentaje }}</td>
                <td>{{ analisis_fisico.humedad }}</td>
                <td class="text-center">{{ analisis_fisico.activo | yesnocustom | raw }}</td>
                <td>
                    {% if access.has('view') %}
                        {{ action.btn_show_link2_ico(path('empresa_show', {'id': analisis_fisico.id})) }}
                    {% endif %}
                    {% if access.has('edit', analisis_fisico) %}
                        {{ action.btn_edit_link2_ico(path('empresa_edit', {'id': analisis_fisico.id})) }}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No hay registros</td>
            </tr>
        {% endfor %}
        {{ action.tbody_end() }}
        {{ action.tbl_end() }}
    </div>

    {{ pagination.show(paginator, _section) }}
{% endblock %}

{% block _main_footer %}
    {% include 'crud/_index_links.html.twig' with {'route_base': 'analisis_fisico'} %}
{% endblock%}

{% block _main_options %}
    {% include 'crud/_index_filter.html.twig' %}
{% endblock %}

{% block _main_tools %}
    {% include 'crud/_tools_ico.html.twig' %}
{% endblock %}

{% block _body_tools_ico %}
    {% include 'crud/_index_links_tool.html.twig' with {'route_base': 'analisis_fisico'}  %}
{% endblock %}

{% block _body_tools %}
    {% include 'crud/_index_links_ico.html.twig' with {'route_base': 'analisis_fisico'}  %}
{% endblock %}

{% block _stylesheets %}
{% endblock %}

{% block _javascripts %}
    <script>
        $(document).ready(function () {
            $(document).on('change', '#filter_size', function () {
                let route = '{{ path('analisis_fisico_index') }}';
                route = route + "?" + 'n=' + $('#filter_size option:selected').val();
                route = route + "&" + 'b=' + $('#filter_text').val();
                window.location = route;
            });

            $(document).on('click', '.btn-send', function () {
                window.location = '{{ path('analisis_fisico_index') }}';
            });

            $(document).on('click', '.btn-clean', function () {
                window.location.href = '{{ path('analisis_fisico_index') }}';
            });
        });
    </script>
{% endblock %}