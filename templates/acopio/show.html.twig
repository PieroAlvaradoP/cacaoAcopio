{% extends 'base.html.twig' %}
{% import 'macro/breadcrumb.html.twig' as breadcrumb %}
{% import 'macro/action.html.twig' as action %}

{% set _title = 'Acopio' %}
{% set _main_title = 'Mostrar' %}
{% set _section =  'acopio_index'%}

{% block _breadcrumb %}
    {{ breadcrumb.show2(_title, _section, 'Mostrar') }}
{% endblock %}

{% block _main %}
    {{ action.tbl_start() }}
    {{ action.tbl_tr('Periodo',acopio.periodo) }}
    {{ action.tbl_tr('Fecha',acopio.fecha) }}
    {{ action.tbl_tr('Almacen',acopio.almacen) }}
    {{ action.tbl_tr('Ticket',acopio.ticket) }}
    {{ action.tbl_tr('Peso Bruto',acopio.pesoBruto) }}
    {{ action.tbl_tr('Unidad Peso Bruto',acopio.unidadPesoBruto) }}
    {{ action.tbl_tr('Cantidad',acopio.cantidad) }}
    {{ action.tbl_tr('Cantidad Unidad',acopio.cantidadUnidad) }}
    {{ action.tbl_tr('Tara',acopio.tara) }}
    {{ action.tbl_tr('Tara Total',acopio.taraTotal) }}
    {{ action.tbl_tr('Peso Neto',acopio.pesoNeto) }}
    {{ action.tbl_tr('Unidad Peso Neto',acopio.pesoNetoUnidad) }}
    {{ action.tbl_tr('Observaciones',acopio.observaciones) }}
    {% include 'crud/_show_info.html.twig' with {'entity': acopio} %}
    {{ action.tbl_end() }}

{% endblock %}

{% block _main_footer %}
    {% include 'crud/_show_links.html.twig' with {'route_base':'acopio','entity': acopio} %}
{% endblock %}

{% block _main_tools %}
    {% include 'crud/_tools_ico.html.twig' %}
{% endblock %}

{% block _body_tools %}
    {% include 'crud/_show_links_ico.html.twig' with {'route_base':'acopio','entity': acopio} %}
{% endblock %}

{% block _body_tools_ico %}
    {% include 'crud/_show_links_tool.html.twig' with {'route_base':'acopio','entity': acopio} %}
{% endblock %}